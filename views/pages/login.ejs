<%- include('../components/header') %>

    <div class="container">
      <div class="wrapper px-4-5">
        <div class="form-header pt-5">
          <img src="media/logo-light.svg" alt="logo"/>
        </div>
        <ul
                class="nav nav-tabs nav-tabs-line nav-tabs-line-2x nav-bolder mb-5 justify-content-center font-size-h6">
          <li class="tab-form nav-item flex-grow-1 p-0" data-tab="login-sms">
            <a class="nav-link justify-content-center text-center">Login with SMS</a>
          </li>
          <li class="tab-form nav-item flex-grow-1 p-0" data-tab="login-email">
            <a class="nav-link justify-content-center text-center">Login with Email</a>
          </li>
        </ul>
        <!-- start::login-sms -->
        <div class="login-view login-form tab-form login-sms animate__animated animate__fadeInLeft">
          <!--begin::Form-->
          <form class="form login-form " id="loginFormSMS" novalidate="novalidate">
            <!--begin::Form group-->
            <div class="form-group">
              <label>ת.ז. \ דרכון</label>
              <input
                      class="form-control"
                      type="text"
                      name="password"
                      placeholder="הזן ת.ז. \ דרכון"
                      autocomplete="off"
                      mandatory
              />
            </div>
            <!--end::Form group-->
            <!--begin::Form group-->
            <div class="form-group">
              <label>מס’ טלפון</label>
              <input
                      class="form-control"
                      type="tel"
                      inputmode="numeric"
                      name="phone"
                      placeholder="הזן מס’ טלפון"
                      pattern="[0-9]"
                      autocomplete="off"
                      mandatory
                      data-type="phone"
              />
            </div>
            <!--end::Form group-->
            <!--begin::Action-->
            <div class="pt-3 d-grid">
              <button type="submit" class="btn btn-primary btn-block login-btn">
                התחבר
              </button>
            </div>
            <!--end::Action-->
          </form>
          <!--end::Form-->
        </div>
        <!-- end::login-sms -->

        <!-- start::login-email -->
        <div class="login-view login-form tab-form login-email animate__animated animate__fadeInLeft d-none">
          <!--begin::Form-->
          <form class="form login-form " id="loginFormEmail" novalidate="novalidate">
            <!--begin::Form group-->
            <div class="form-group">
              <label>ת.ז. \ דרכון</label>
              <input
                      class="form-control"
                      type="text"
                      name="password"
                      placeholder="הזן ת.ז. \ דרכון"
                      autocomplete="off"
                      mandatory
              />
            </div>
            <!--end::Form group-->
            <!--begin::Form group-->
            <div class="form-group">
              <label>email</label>
              <input
                      class="form-control"
                      type="email"
                      name="email"
                      placeholder="email"
                      autocomplete="off"
                      mandatory
                      data-type="email"
              />
            </div>
            <!--end::Form group-->
            <!--begin::Action-->
            <div class="pt-3 d-grid">
              <button type="submit" class="btn btn-primary btn-block login-btn">
                התחבר
              </button>
            </div>
            <!--end::Action-->
          </form>
          <!--end::Form-->
        </div>
        <!-- end::login-email -->

        <!-- start::two-factor-form -->
        <div class="login-view two-factor-form d-none animate__animated animate__fadeInLeft tab-form login-two-factor">
          <!--begin::Form-->
          <form class="form" id="twoFactorForm" novalidate="novalidate">
            <!--begin::Form group-->
            <div class="form-group">
              <h4>
                הזן קוד אימות
              </h4>
              <p>
                ברגעים אלה שנלח אליך קוד אימות באמצעות SMS <br>
                אנה הזן את קוד האימות לצורך התחברות
              </p>
            </div>
            <div class="form-group">
              <div class="d-flex justify-content-between">
                <input class="form-control form-control-pin" type="number" pattern="\d*" split-input="5" placeholder=""/>
                <input class="form-control form-control-pin" type="number" pattern="\d*" split-input="4" placeholder=""/>
                <input class="form-control form-control-pin" type="number" pattern="\d*" split-input="3" placeholder=""/>
                <input class="form-control form-control-pin" type="number" pattern="\d*" split-input="2" placeholder=""/>
                <input class="form-control form-control-pin" type="number" pattern="\d*" split-input="1" placeholder=""/>
              </div>
            </div>
            <!--end::Form group-->
            <!--begin::Action-->
            <div class="pt-3 d-grid">
              <button type="button" disabled class="sumbit-two-factor-button btn btn-primary btn-block">
                המשך
              </button>
              <a class="pt-3 text-left" style="text-align: left" href="#"
              >לא קיבלתי SMS, שלח שוב</a>
            </div>
            <!--end::Action-->
          </form>
          <!--end::Form-->
        </div>
        <!-- end::two-factor-form -->
      </div>
    </div>
    <!-- end::page content -->
<script src="scripts/login.js"></script>
<%- include('../components/footer') %>
